[Unit]
Description=twist_to_ackermann ROS 2 node
After=network-online.target

[Service]
Type=simple
Restart=on-failure
RestartSec=2

ExecStart=/usr/bin/docker exec hunter_se /bin/bash -lc \
    'source /opt/ros/humble/setup.bash && source /hunter_ws/install/setup.bash && ros2 run twist_to_ackermann twist_to_ackermann_node'

[Install]
WantedBy=default.target